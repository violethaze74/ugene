                bg-color-simple:"0 145 0 255";
                in.angle:91.9749;
                out.angle:181.591;
            }
            classification-filter-1 {
                pos:"-165 -375";
                style:simple;
                bg-color-simple:"0 128 128 255";
                in.angle:88.8309;
                out.angle:270;
            }
            classification-filter-2 {
                pos:"-465 -210";
                style:simple;
                bg-color-simple:"0 128 128 255";
                in.angle:358.264;
                out.angle:183.366;
            }
            classification-report-1 {
                pos:"-15 -450";
                style:simple;
                bg-color-simple:"141 126 194 255";
                in.angle:144.689;
            }
            classification-report-2 {
                pos:"-195 -30";
                style:simple;
                bg-color-simple:"141 126 194 255";
                in.angle:91.5911;
            }
            classification-report-3 {
                pos:"-735 -45";
                style:simple;
                bg-color-simple:"141 126 194 255";
                in.angle:91.8476;
            }
            diamond-classify {
                pos:"-735 -210";
                style:simple;
                bg-color-simple:"0 145 0 255";
                in.angle:358.452;
                out.angle:274.667;
            }
            fastqc-after {
                pos:"-315 -645";
                style:simple;
                bg-color-simple:"81 120 78 255";
                in-file.angle:237.653;
            }
            fastqc-before {
                pos:"-585 -645";
                style:simple;
                bg-color-simple:"81 120 78 255";
                in-file.angle:216.529;
            }
            get-se-reads-list {
                pos:"-735 -540";
                style:simple;
                bg-color-simple:"23 106 239 255";
                out.angle:360;
            }
            kraken-classify {
                pos:"-165 -540";
                style:simple;
                bg-color-simple:"0 145 0 255";
                in.angle:184.086;
                out.angle:268.977;
            }
            trimmomatic {
                pos:"-465 -540";
                style:simple;
                bg-color-simple:"127 127 127 255";
                in.angle:180;
                out.angle:360;
            }
            clark-classify.out->classification-filter-2.in {
                text-pos:"-39 4";
